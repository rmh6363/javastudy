package com.naver;

public class Hero {
	Weapon[] Weapons;
	Weapon w;

	public Hero() {

	}

	public void attack(Monster mon) {
		w.attack(mon);
	}

	public void changeWeapon(int weaponidx) {
		try {
			w = Weapons[weaponidx];
		} catch (Exception e) {
			System.out.println("0 ,1 ,2 중 하나를입력해주세요");
		}
		
	}

	public Hero(Weapon[] weapons, Weapon w) {
		super();
		Weapons = weapons;
		this.w = w;
	}

}
